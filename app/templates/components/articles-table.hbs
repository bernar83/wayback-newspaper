<div class="text-center">
  <h3>{{this.library.state}}</h3>
  {{#bs-button onClick=(action "getNewArticles")}}
    New State
  {{/bs-button}}
</div>
{{#if this.library.isLoading}}
  <div class="text-center">
    <div class="spinner-border" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
{{/if}}
{{#each this.library.articles as |article|}}
  <div class="card">
    <div class="card-body">
      <a href={{article.link}}>
        <h5 class="card-title">Title: {{article.name}}</h5>
      </a>
      <ul>
        <li>Publisher: {{article.publisher}}</li>
        <li>Year: {{article.year}}</li>
      </ul>
    </div>
  </div>
{{/each}}